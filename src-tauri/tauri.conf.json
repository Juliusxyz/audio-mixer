{
  "productName": "Audio Mixer",
  "version": "0.1.10",
  "identifier": "com.juliusxyz.audio-mixer",
  "build": {
    "beforeDevCommand": "vite",
    "beforeBuildCommand": "vite build",
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173"
  },
  "bundle": {
    "active": true,
    "targets": ["msi", "nsis"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],

    "publisher": "JuliusXYZ",
    "shortDescription": "Professional Windows Audio Mixer",
    "longDescription": "A modern audio mixer for Windows with per-app routing and volume control"
  },
  "app": {
    "security": {
      "capabilities": ["updater-capability"]
    },
    "windows": [
      {
        "title": "Audio Mixer",
        "width": 1200,
        "height": 800,
        "resizable": true,
        "fullscreen": false,
        "dragDropEnabled": false,
        "devtools": true
      }
    ]
  },
  "plugins": {
    "updater": {
      "active": true,
      "endpoints": [
        "https://api.github.com/repos/Juliusxyz/audio-mixer/releases/latest"
      ],
      "dialog": false,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEZDNjBGM0RGNzA4NjE4MDcKUldRSEdJWnczL05nL0loZWV3UkdJdUZ1VG5qUDVncmZsYkpNYTA3V0YxK1hDdk96NVFVVFFBMTEK",
      "windows": {
        "installMode": "passive"
      }
    }
  }
}
