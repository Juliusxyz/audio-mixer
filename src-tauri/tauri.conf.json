{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Audio Mixer",
  "version": "0.1.0",
  "identifier": "com.example.audio_mixer",
  "build": {
    "beforeDevCommand": "vite",
    "beforeBuildCommand": "vite build",
    "devUrl": "http://localhost:5173",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Audio Mixer",
        "width": 1100,
        "height": 720,
        "decorations": true,
        "transparent": false,
        "resizable": true
      }
    ]
  },
  "plugins": {
    "updater": {
      "active": true,
  "endpoints": ["https://api.github.com/repos/your-org/your-repo/releases/latest"],
      "dialog": false,
      "pubkey": "" 
    }
  },
  "bundle": {
    "active": true,
    "targets": ["msi"],
    "windows": {
      "wix": {
        "language": "en-US"
      }
    }
  }
}
